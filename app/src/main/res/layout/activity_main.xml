<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.sn0wcr4sh.shiptracker.MainActivity"
    android:padding="16dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:columnCount="2">
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewLabel"
            android:text="@string/wifi_state"/>
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/tvWifiState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewValue"
            android:text="@string/wifi_on"/>

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewLabel"
            android:text="@string/ship_address"/>
        <TextView
            android:id="@+id/tvShipAddress"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewValue"
            android:text="@string/unread"/>

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewLabel"
            android:text="@string/connection"/>
        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewValue"
            android:text="@string/unread"/>

        <TextView
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewLabel"
            android:text="@string/read_data"/>
        <TextView
            android:id="@+id/tvReadData"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewValue"
            android:text="@string/unread"/>

    </GridLayout>

    <Button
        android:id="@+id/btConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/connect"
        android:onClick="startDiscovery"/>




